{
    "compilerOptions": {
      "target": "ES2021",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "baseUrl": "./",
      "paths": {
        "@/*": ["./src/*"],
        "tsoa": ["node_modules/tsoa/dist"],
        "tsoa/": ["node_modules/tsoa/dist/"]
      },
      "outDir": "./build",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": false,
     "skipLibCheck": true
}
  